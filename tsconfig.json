{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "ts-node": {
    "files": true
  }
}
